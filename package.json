{
  "repository": {
    "type": "git",
    "url": "https://github.com/shipshapecode/react-shepherd.git"
  },
  "private": true,
  "devDependencies": {
    "@netlify/plugin-nextjs": "^4.11.1",
    "npm-run-all": "^4.1.5",
    "release-it-yarn-workspaces": "^2.0.1"
  },
  "scripts": {
    "build": "pnpm build",
    "preinstall": "npx only-allow pnpm",
    "release": "pnpm release",
    "start": "pnpm start",
    "lint": "pnpm lint",
    "test": "pnpm test"
  },
  "release-it": {
    "plugins": {
      "release-it-yarn-workspaces": {
        "workspaces": [
          "packages/lib"
        ]
      },
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md",
        "launchEditor": true
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "tokenRef": "GITHUB_AUTH"
    },
    "npm": false
  },
  "version": "4.1.0"
}
